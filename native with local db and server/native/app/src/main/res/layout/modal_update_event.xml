<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/modalCreateEventLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <EditText
            android:id="@+id/modalEventTitleCreateEventLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10sp"
            android:layout_marginTop="5sp"
            android:layout_marginEnd="5sp"
            android:ems="10"
            android:fontFamily="@font/roboto_thin"
            android:hint="Title"
            android:inputType="textPersonName"
            android:textSize="25sp" />

        <EditText
            android:id="@+id/descriptionCreateEventModalLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:fontFamily="@font/roboto_thin"
            android:hint="Description"
            android:inputType="textPersonName"
            android:textSize="25sp" />

        <EditText
            android:id="@+id/startDateCreateEventModalLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:fontFamily="@font/roboto_thin"
            android:hint="Start Date : yyyy-mm-dd"
            android:inputType="textPersonName"
            android:textSize="25sp" />

        <EditText
            android:id="@+id/endDateCreateEventModalLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:fontFamily="@font/roboto_thin"
            android:hint="End Date: yyyy-mm-dd"
            android:inputType="textPersonName"
            android:textSize="25sp" />

        <EditText
            android:id="@+id/startHourCreateEventModalLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:fontFamily="@font/roboto_thin"
            android:hint="Start Hour"
            android:inputType="textPersonName"
            android:textSize="25sp" />

        <CheckBox
            android:id="@+id/modifyLocation"
            android:layout_width="match_parent"
            android:layout_height="43dp"
            android:fontFamily="@font/roboto_thin"
            android:text="Update Location" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>