<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/hostNameEventDetails"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#B1CCEB"
    tools:context=".user_is_logged_activities.event_details.EventDetails">

    <com.google.android.gms.maps.MapView
        android:id="@+id/eventLocationEventDetails"
        android:layout_width="351dp"
        android:layout_height="208dp"
        android:layout_marginTop="32dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/startDateEventDetails" />

    <TextView
        android:id="@+id/startDateEventDetails"
        android:layout_width="355dp"
        android:layout_height="56dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="28dp"
        android:fontFamily="@font/roboto_thin"
        android:textAlignment="center"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/descriptionEventDetails" />

    <TextView
        android:id="@+id/titleEventDetails"
        android:layout_width="319dp"
        android:layout_height="46dp"
        android:layout_marginTop="100dp"
        android:fontFamily="@font/roboto_thin"
        android:textAlignment="center"
        android:textSize="25sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/descriptionEventDetails"
        android:layout_width="321dp"
        android:layout_height="107dp"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/roboto_thin"
        android:textAlignment="center"
        android:textSize="15sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/titleEventDetails" />

    <TextView
        android:id="@+id/hostEventDetails"
        android:layout_width="357dp"
        android:layout_height="54dp"
        android:layout_marginTop="12dp"
        android:fontFamily="@font/roboto_thin"
        android:textAlignment="center"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/eventLocationEventDetails" />

    <LinearLayout
        android:id="@+id/upper-layout-eventdets"
        android:layout_width="383dp"
        android:layout_height="47dp"
        android:layout_marginTop="20dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageButton
            android:id="@+id/backButtonEventDetails"
            android:layout_width="99dp"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/abc_vector_test" />
    </LinearLayout>

    <Button
        android:id="@+id/removeEventDetails"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="96dp"
        android:text="Remove"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/hostEventDetails" />

    <Button
        android:id="@+id/editEventDetail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:text="Edit"
        app:layout_constraintStart_toEndOf="@+id/removeEventDetails"
        app:layout_constraintTop_toBottomOf="@+id/hostEventDetails" />

</androidx.constraintlayout.widget.ConstraintLayout>